---
import '@fontsource/space-mono';
import '@fontsource/michroma';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Vektogram - Enterprise-grade SaaS solutions for modern businesses. Discover our suite of digital transformation tools and services." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-black text-white min-h-screen">
    <nav class="fixed w-full top-0 z-50">
      <div class="backdrop-blur-md bg-black/30 border-b border-white/10">
        <div class="max-w-7xl mx-auto flex justify-between items-center px-6 py-4">
          <a href="/" class="text-xl text-white font-michroma tracking-widest font-bold">
            <span class="text-2xl">VEKTOGRAM</span>
          </a>
          <button id="menuButton" class="md:hidden z-50 relative">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
            </svg>
          </button>
          <div class="hidden md:flex space-x-8 text-sm">
            <a href="#products" class="hover:text-gray-400 transition-colors">products</a>
            <a href="#store" class="hover:text-gray-400 transition-colors">store</a>
            <a href="#support" class="hover:text-gray-400 transition-colors">support</a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Mobile Menu -->
    <div id="mobileMenu" class="fixed inset-0 bg-black/95 backdrop-blur-lg z-40 hidden">
      <div class="flex flex-col h-full">
        <div class="flex justify-between items-center px-6 py-4">
          <a href="/" class="text-xl font-michroma tracking-widest font-bold">
            <span class="text-2xl">VEKTOGRAM</span>
          </a>
        </div>
        <div class="flex-1 flex flex-col px-6 py-12 space-y-6 text-lg">
          <a href="#products" class="hover:text-gray-400 transition-colors">products</a>
          <a href="#store" class="hover:text-gray-400 transition-colors">store</a>
          <a href="#support" class="hover:text-gray-400 transition-colors">support</a>
        </div>
      </div>
    </div>

    <main>
      <slot />
    </main>
    
    <footer class="py-12 px-6 text-center text-xs text-gray-500 border-t border-gray-900">
      <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-left">
          <p>copyright Â©{new Date().getFullYear()}</p>
          <p>vektogram engineering</p>
          <p>all rights reserved</p>
        </div>
        <div class="text-left md:text-center">
          <p>textilgatan 31</p>
          <p>120 30 stockholm</p>
          <p>sweden</p>
        </div>
        <div class="text-left md:text-right">
          <a href="#newsletter" class="hover:text-white transition-colors">
            join our newsletter
          </a>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  :root {
    --accent: 255, 0, 0;
    --accent-light: 255, 100, 100;
  }
  
  html {
    font-family: 'Space Mono', monospace;
    scroll-behavior: smooth;
    background: black;
  }

  .font-michroma {
    font-family: 'Michroma', sans-serif;
    letter-spacing: 0.1em;
    text-shadow: 0 0 1px rgba(255,255,255,0.5);
    font-weight: 900;
    -webkit-text-stroke: 0.5px white;
  }
  
  body {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-weight: 300;
    letter-spacing: -0.02em;
  }

  @keyframes fade-in {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .fade-in {
    animation: fade-in 1s ease-out;
  }

  #menuButton.menu-open svg {
    transform: rotate(45deg);
  }

  #mobileMenu {
    transition: opacity 0.3s ease-in-out;
    opacity: 0;
    pointer-events: none;
  }

  #mobileMenu.visible {
    opacity: 1;
    pointer-events: auto;
  }
</style>

<script>
  const menuButton = document.getElementById('menuButton');
  const mobileMenu = document.getElementById('mobileMenu');

  menuButton?.addEventListener('click', () => {
    menuButton.classList.toggle('menu-open');
    mobileMenu?.classList.toggle('visible');
    mobileMenu?.classList.toggle('hidden');
    document.body.style.overflow = mobileMenu?.classList.contains('visible') ? 'hidden' : '';
  });

  // Close menu when clicking on a link
  const mobileLinks = mobileMenu?.querySelectorAll('a');
  mobileLinks?.forEach(link => {
    link.addEventListener('click', () => {
      menuButton?.classList.remove('menu-open');
      mobileMenu?.classList.remove('visible');
      mobileMenu?.classList.add('hidden');
      document.body.style.overflow = '';
    });
  });
</script> 