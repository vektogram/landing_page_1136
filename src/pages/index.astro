---
import Layout from '../layouts/Layout.astro';

const products = [
  {
    name: 'field system',
    description: 'modular audio interface',
    image: '/images/field-system.jpg',
    category: 'audio'
  },
  {
    name: 'ep-133',
    description: 'k.o. II synthesizer',
    image: '/images/ep-133.jpg',
    category: 'synthesizers'
  },
  {
    name: 'op-1 field',
    description: 'portable synthesizer',
    image: '/images/op-1.jpg',
    category: 'synthesizers'
  }
];
---

<Layout title="vektogram engineering">
  <div class="min-h-screen">
    <!-- Hero Section -->
    <section class="h-screen flex items-center justify-center relative">
      <div class="text-center space-y-8">
        <div class="space-y-2">
          <h1 class="text-7xl md:text-9xl font-light tracking-tighter uppercase">
            vektogram
          </h1>
          <p class="text-xl md:text-2xl text-gray-500 font-thin tracking-widest uppercase">
            engineering
          </p>
        </div>
        <p class="text-gray-500 text-sm uppercase tracking-wider mt-8">
          explore
        </p>
      </div>
    </section>

    <!-- Products -->
    {products.map((product, index) => (
      <section class="relative min-h-screen flex items-center bg-black">
        <div class="w-full">
          <div class="max-w-7xl mx-auto px-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
              <div class={`space-y-6 ${index % 2 === 0 ? 'md:order-1' : ''}`}>
                <h2 class="text-3xl font-light tracking-tighter">{product.name}</h2>
                <p class="text-gray-500">{product.description}</p>
                <a href={`#${product.name}`} class="text-red-500 hover:text-white transition-colors inline-block">
                  explore
                </a>
              </div>
              <div class="aspect-square bg-zinc-900 rounded-none overflow-hidden">
                <img 
                  src={product.image} 
                  alt={product.name}
                  class="w-full h-full object-cover"
                />
              </div>
            </div>
          </div>
        </div>
      </section>
    ))}

    <!-- Categories -->
    <section class="py-24 px-6">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
          <div>
            <h3 class="text-sm text-gray-500 mb-4">field system</h3>
            <ul class="space-y-2 text-sm">
              <li><a href="#op-1" class="hover:text-gray-400">op-1 field</a></li>
              <li><a href="#tp-7" class="hover:text-gray-400">tp-7</a></li>
              <li><a href="#cm-15" class="hover:text-gray-400">cm-15</a></li>
            </ul>
          </div>
          <div>
            <h3 class="text-sm text-gray-500 mb-4">synthesizers</h3>
            <ul class="space-y-2 text-sm">
              <li><a href="#ep-133" class="hover:text-gray-400">ep-133 k.o. II</a></li>
              <li><a href="#po-32" class="hover:text-gray-400">po-32</a></li>
              <li><a href="#po-33" class="hover:text-gray-400">po-33</a></li>
            </ul>
          </div>
          <div>
            <h3 class="text-sm text-gray-500 mb-4">audio</h3>
            <ul class="space-y-2 text-sm">
              <li><a href="#ob-4" class="hover:text-gray-400">ob-4</a></li>
              <li><a href="#m-1" class="hover:text-gray-400">m-1</a></li>
            </ul>
          </div>
          <div>
            <h3 class="text-sm text-gray-500 mb-4">accessories</h3>
            <ul class="space-y-2 text-sm">
              <li><a href="#cases" class="hover:text-gray-400">cases</a></li>
              <li><a href="#cables" class="hover:text-gray-400">cables</a></li>
              <li><a href="#apparel" class="hover:text-gray-400">apparel</a></li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Free Shipping Banner -->
    <section class="py-12 px-6 border-t border-gray-900">
      <div class="max-w-7xl mx-auto text-center">
        <p class="text-sm">
          free shipping over $120
          <span class="text-gray-500 ml-2">14 day return policy</span>
        </p>
      </div>
    </section>
  </div>
</Layout>

<style>
  section {
    scroll-margin-top: 5rem;
  }

  h1 {
    letter-spacing: -0.05em;
  }
</style>
